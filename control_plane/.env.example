# Control Plane Environment Configuration
# Copy to .env and customize

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=postgresql://aidevbox:aidevbox@postgres:5432/control_plane

# =============================================================================
# Security
# =============================================================================
# Encryption key for secrets storage
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=

# =============================================================================
# OpenObserve (log storage)
# =============================================================================
# Root user credentials for OpenObserve
OPENOBSERVE_USER=admin@cagent.local
OPENOBSERVE_PASSWORD=admin

# =============================================================================
# OpenObserve Multi-Tenancy
# =============================================================================
# Per-tenant OpenObserve orgs with per-source streams (default: true)
OPENOBSERVE_MULTI_TENANT=true

# =============================================================================
# Log Ingestion Hardening
# =============================================================================
# Max logs per batch (413 if exceeded)
LOG_INGEST_MAX_BATCH_SIZE=500
# Max payload size in bytes (413 if exceeded)
LOG_INGEST_MAX_PAYLOAD_BYTES=1048576
# Max log age in hours (400 if exceeded)
LOG_INGEST_MAX_AGE_HOURS=24
# Timeout for OpenObserve ingestion requests (seconds)
LOG_INGEST_TIMEOUT=10.0

# =============================================================================
# Log Query Hardening
# =============================================================================
# Timeout for OpenObserve query requests (seconds)
LOG_QUERY_TIMEOUT=15.0
# Max results per query
LOG_QUERY_MAX_RESULTS=1000
# Max time range for queries (days, 400 if exceeded)
LOG_QUERY_MAX_TIME_RANGE_DAYS=30

# =============================================================================
# API Settings
# =============================================================================
# Set to "true" to seed test tenants, tokens, and domain policies on startup
SEED_TOKENS=false

# Allowed CORS origins (comma-separated)
# Example: http://localhost:9080,https://admin.example.com
CORS_ORIGINS=

# =============================================================================
# FRP Server (for agent SSH access)
# =============================================================================
# Authentication token (share with data plane agents)
# Generate with: openssl rand -hex 32
FRP_AUTH_TOKEN=changeme

# Dashboard password
FRP_DASHBOARD_PASSWORD=admin
